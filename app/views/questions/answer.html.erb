<div class="card">
<h2><%= params[:question] %></h2>
<h3>-You</h3>
</div>



<div class="card answer">
  <% if params[:question] == "I am going to work" %>
  <h2>"Great!"</h2>
  <% elsif params[:question].end_with?('?') %>
  <h2>"Silly question, get dressed and go to work!"</h2>
  <% else %>
  <h2>"I don't care, get dressed and go to work!"</h2>
  <% end %>
  <h3>-Coach</h3>
</div>

<%= link_to "Ask a new question", ask_path %>
